<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/add_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/add_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:text="@string/add_message"
        android:textSize="18sp"
        android:textColor="@android:color/black" />
    <EditText
        android:id="@+id/full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_title"
        android:maxLines="1"
        android:hint="@string/add_query_hint"/>

    <CheckBox
        android:id="@+id/check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/full_name"
        android:layoutDirection="rtl"
        android:textSize="15sp"
        android:text="@string/add_checkbox_query" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/full_name">

    <TextView
        android:id="@+id/visitors_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/visitors_message"
        android:textSize="15sp"
        android:textColor="@android:color/black"/>

        <NumberPicker
            android:id="@+id/visitors_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.70"
            android:scaleY="0.70"
            android:fadingEdge="none"
            android:layout_centerInParent="true" />
    </RelativeLayout>
</RelativeLayout>
</FrameLayout>